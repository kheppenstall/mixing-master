<h2>All Playlists</h2>

<div class="container">
  <div class="col-md-2">
    <ul class="list-group">
    <% @playlists.each do |playlist| %>
      <%= link_to playlist.name, playlist_path(playlist), class:"list-group-item" %>
    <% end %>
    </ul>
    <%= link_to "New Playlist", new_playlist_path, class:"btn btn-primary"%>
  </div>
</div>


<div class="container">
  <br/>
  <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <%= link_to "Artists", artists_path, class:"btn btn-info"%>
    <%= link_to "Songs", songs_path, class:"btn btn-info"%>
  </div>
</div>