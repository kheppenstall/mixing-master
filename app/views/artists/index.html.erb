<h2>All Artists</h2>

<div class="container">
  <div class="col-md-2">
    <ul class="list-group">
    <% @artists.each do |artist| %>
      <%= link_to artist.name, artist, class:"list-group-item" %>
    <% end %>
    </ul>
    <%= link_to "New Artist", new_artist_path, class:"btn btn-primary"%>
  </div>
</div>

<div class="container">
  <br/>
  <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <%= link_to "Songs", songs_path, class:"btn btn-info"%>
    <%= link_to "Playlists", playlists_path, class:"btn btn-info"%>
  </div>
</div>